<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="3dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="3dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="10dp"
    android:background="@color/button_selectorcolor"
    android:backgroundTint="@color/white_greyish"
    tools:ignore="UnusedAttribute"
    android:layout_gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:layout_gravity="top"
        android:gravity="center"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/default_profile_display_pic"
                android:id="@+id/popUP_ProPic"
                android:layout_gravity="center"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/colorPrimaryDark"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="14sp"
            android:id="@+id/popUpLastSeen"
            android:visibility="gone"
            android:textColor="@color/colorBlack"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_message_black_24dp"
                android:layout_gravity="center"
                android:id="@+id/popUP_SendMessage"
                android:padding="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_info"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:id="@+id/popUP_ViewProfile"
                android:padding="10dp"
                android:visibility="visible"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_call_black_24dp"
                android:layout_gravity="center"
                android:id="@+id/popUP_callUser"
                android:layout_alignParentEnd="true"
                android:padding="10dp"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>