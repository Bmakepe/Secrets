<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".GettingStarted.InAppActivities.SharePostActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sharingToolbar"
        android:padding="5dp">

        <ImageView
            android:id="@+id/post_share_back_BTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_arrow_back_black_24dp"
            app:tint="@color/white"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/share_userProPic"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp"
            android:layout_toEndOf="@+id/post_share_back_BTN"
            android:src="@drawable/default_profile_display_pic"
            android:padding="2dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share Post"
            android:textColor="@color/white"
            android:padding="5dp"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:lines="1"
            android:letterSpacing="0.1"
            android:layout_toEndOf="@+id/share_userProPic"
            android:layout_toStartOf="@+id/share_speak_now"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>

        <ImageView
            android:id="@+id/share_speak_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_toStartOf="@+id/postShareBTN"
            android:src="@android:drawable/ic_btn_speak_now"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:textSize="16sp"
            android:drawablePadding="5dp"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:id="@+id/postShareBTN"
            android:layout_margin="5dp"
            tools:ignore="UseCompatTextViewDrawableXml"
            app:drawableTint="@color/white" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sharingToolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_edittext"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textMessage"
                    style="@style/parent"
                    android:padding="5dp"
                    android:layout_toStartOf="@+id/share_recVoiceBTN"
                    android:backgroundTint="@color/white">

                    <EditText
                        android:id="@+id/shareCaption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/share_recVoiceBTN"
                        android:hint="Whats Up??"
                        android:background="@null"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:textColor="@color/colorBlack"
                        android:gravity="top|left"
                        android:textColorHint="@color/white_greyish" />

                </com.google.android.material.textfield.TextInputLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/share_recVoiceBTN"
                    android:visibility="gone"
                    android:src="@drawable/ic_baseline_fiber_manual_record_24"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/colorRed"
                    android:layout_centerVertical="true"
                    android:padding="5dp"/>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:backgroundTint="@color/white"
                app:cardElevation="5dp"
                android:id="@+id/post_to_be_shared"
                app:cardCornerRadius="5dp"
                android:layout_margin="5dp"
                app:cardUseCompatPadding="false"
                tools:ignore="UnusedAttribute">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/postProPic">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/default_profile_display_pic"
                            app:civ_border_width="2dp"
                            android:layout_centerVertical="true"
                            android:id="@+id/share_image_user"
                            app:civ_border_color="@color/colorBlack"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_toEndOf="@+id/share_image_user"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:id="@+id/postHeader">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:layout_toStartOf="@+id/share_postDate"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorBlack"
                                    android:singleLine="true"
                                    android:layout_centerVertical="true"
                                    android:id="@+id/share_username" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:layout_alignParentEnd="true"
                                    android:textColor="@color/colorBlack"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:id="@+id/share_postDate"
                                    tools:ignore="SmallSp" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                android:id="@+id/share_postLocationArea">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_baseline_location_on_24"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:id="@+id/share_postCheckIn"
                                    android:layout_gravity="center_vertical"
                                    android:textStyle="normal"
                                    android:layout_marginStart="2dp"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="10sp"
                                    tools:ignore="SmallSp" />

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/postProPic"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentEnd="true">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_person_black_24dp"
                                android:padding="2dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:id="@+id/taggedPeopleList"
                                android:layout_gravity="center_vertical"
                                android:text="Chaka, Kamohelo, Mahao, Matli and 3 others"
                                android:textStyle="normal"
                                android:textColor="@color/colorBlack"
                                android:textSize="10sp"
                                tools:ignore="SmallSp" />

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/share_postPicArea"
                            android:visibility="gone"
                            android:backgroundTint="@color/white_greyish"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="1dp"
                            tools:ignore="UnusedAttribute">

                            <ProgressBar
                                android:id="@+id/progress_load_media"
                                style="@android:style/Widget"
                                android:backgroundTint="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_centerVertical="true"/>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:scaleType="centerCrop"
                                android:visibility="gone"
                                android:id="@+id/share_postImage"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="350dp"
                                android:id="@+id/postVideoArea"
                                android:visibility="gone">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <VideoView
                                        android:id="@+id/postVideoView"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#00FFFFFF"
                                        android:visibility="visible"
                                        app:layout_constraintDimensionRatio="16:9"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <ProgressBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/bufferProgress"
                                    android:visibility="gone"
                                    android:layout_centerInParent="true"/>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:background="@color/white_greyish">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/ic_baseline_play_arrow_24"
                                        android:padding="5dp"
                                        android:layout_alignParentStart="true"
                                        android:id="@+id/videoPlayBTN"
                                        app:tint="@color/white" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="00:00"
                                        android:padding="5dp"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:layout_toEndOf="@+id/videoPlayBTN"
                                        android:layout_centerVertical="true"
                                        android:id="@+id/onGoingDuration"/>

                                    <!--<SeekBar
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:layout_toStartOf="@+id/totalDuration"
                                        android:layout_toEndOf="@+id/onGoingDuration"
                                        android:id="@+id/videoSeekbar"
                                        android:layout_centerVertical="true"/>-->

                                    <ProgressBar
                                        android:id="@+id/videoSeekbar"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:progressTint="@color/colorPrimaryDark"
                                        android:layout_toStartOf="@+id/totalDuration"
                                        android:layout_toEndOf="@+id/onGoingDuration"
                                        android:layout_centerVertical="true"
                                        tools:layout_editor_absoluteX="85dp"
                                        tools:layout_editor_absoluteY="581dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="00:00"
                                        android:padding="5dp"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:layout_centerVertical="true"
                                        android:layout_toStartOf="@+id/volumeBTN"
                                        android:id="@+id/totalDuration"/>

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:src="@drawable/ic_baseline_volume_up_24"
                                        android:id="@+id/volumeBTN"
                                        android:layout_centerVertical="true"
                                        android:layout_toStartOf="@+id/videoMenuBTN"
                                        app:tint="@color/white" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:layout_centerVertical="true"
                                        android:src="@drawable/ic_item_menu_icon"
                                        android:id="@+id/videoMenuBTN"
                                        android:layout_alignParentEnd="true"
                                        app:tint="@color/white" />

                                </RelativeLayout>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/shareVideoCardView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:baselineAligned="false"
                            android:orientation="vertical"
                            android:visibility="gone"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="5dp"
                            app:cardUseCompatPadding="false"
                            tools:ignore="UnusedAttribute">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="300dp">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/shareVideoArea"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:visibility="visible">

                                    <VideoView
                                        android:id="@+id/sharePreviewCameraSelectedVideo"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:visibility="visible"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="0.5"
                                        app:layout_constraintStart_toStartOf="parent" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <ProgressBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/sharedVideoLoader"
                                    android:layout_centerInParent="true"/>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="4"
                            android:textSize="12sp"
                            android:padding="5dp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="normal"
                            android:id="@+id/share_post_desc"/>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/myDetailsArea"
                android:padding="5dp"
                android:layout_gravity="center_vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_toStartOf="@+id/postIconsArea"
                    android:layout_weight="4">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:id="@+id/sharingPrivacyBTN"
                        tools:ignore="Suspicious0dp">

                        <LinearLayout
                            android:id="@+id/share_audience_set"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/audience"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Privacy"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:singleLine="true"
                                android:drawablePadding="5dp"
                                app:drawableStartCompat="@drawable/ic_lock_black_24dp"
                                app:drawableTint="@color/colorBlack" />

                            <TextView
                                android:id="@+id/share_audience_picker"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Public"
                                android:singleLine="true"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:id="@+id/shareTagLocationBTN"
                        tools:ignore="Suspicious0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/share_tag_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Check In"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:drawablePadding="5dp"
                                android:singleLine="true"
                                app:drawableTint="@color/colorBlack"
                                app:drawableStartCompat="@drawable/ic_baseline_location_on_24" />

                            <TextView
                                android:id="@+id/share_locationCheckIn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="No Location"
                                android:textColor="@color/colorBlack"
                                android:singleLine="true"/>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/postIconsArea"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_person_add_black_24dp"
                        android:padding="10dp"
                        android:id="@+id/share_friendsTagger"
                        app:tint="@color/colorBlack" />


                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>