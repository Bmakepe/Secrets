<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_gravity="center">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/vinyl"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/dynasty_logo"
                android:tint="@color/colorWhite"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_text"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="5dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/personalArea" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/coverArea">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:id="@+id/regProCoverPic"
                        android:src="@drawable/default_profile_display_pic"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_edit_black_24dp"
                        android:padding="5dp"
                        android:id="@+id/addCoverPicBTN"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_edittext"/>

                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/regProPicArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_below="@+id/coverArea"
                    android:layout_marginTop="-60dp">

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/changePicArea">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/setupProfilePic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="top|center"
                            android:src="@drawable/default_profile_display_pic"
                            app:civ_border_color="@color/colorBlack"
                            app:civ_border_width="3dp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_add_circle_outline_black_24dp"
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/colorBlack"
                            app:civ_circle_background_color="@color/white"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="4dp"/>

                    </RelativeLayout>

                </FrameLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/usernameTIL"
                    android:background="@drawable/rounded_edittext"
                    app:counterEnabled="true"
                    app:counterMaxLength="15"
                    android:padding="5dp"
                    app:counterOverflowTextAppearance="@color/colorRed">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/username"
                        android:textColorHint="#fff"
                        android:textColor="#000"
                        android:drawableStart="@drawable/ic_person_black_24dp"
                        android:drawablePadding="8dp"
                        android:id="@+id/setupUsername"
                        android:layout_gravity="center"
                        android:drawableTint="@color/colorBlack"
                        android:inputType="text"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:background="@null"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/biographyTIL"
                    android:background="@drawable/rounded_edittext"
                    app:counterEnabled="true"
                    app:counterMaxLength="100"
                    android:padding="5dp"
                    app:counterOverflowTextAppearance="@color/colorRed"
                    android:layout_marginTop="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/setup_biography"
                        android:textColorHint="#fff"
                        android:textColor="#000"
                        android:drawableStart="@drawable/ic_info"
                        android:drawablePadding="8dp"
                        android:id="@+id/setupBiography"
                        android:drawableTint="@color/colorBlack"
                        android:layout_gravity="center"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:lines="5"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:background="@null"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@drawable/rounded_edittext"
                    app:counterOverflowTextAppearance="@color/colorRed"
                    android:layout_marginTop="5dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/dateOfBirthPicker"
                        android:clickable="true"
                        android:hint="@string/dob_text"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/ic_baseline_date_range_24"
                        android:drawablePadding="8dp"
                        android:textStyle="bold"
                        android:editable="false"
                        android:drawableTint="@color/colorBlack"
                        android:background="@null"
                        android:focusable="false"
                        android:padding="5dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlack"
                        tools:ignore="KeyboardInaccessibleWidget"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/parent"
                    android:background="@drawable/rounded_edittext"
                    android:padding="5dp"
                    android:layout_marginTop="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/userLocation"
                            style="@style/modifiedEditText"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:textSize="14sp"
                            android:hint="Click here to retrieve your address"
                            android:drawableStart="@drawable/ic_baseline_location_on_24"
                            android:drawablePadding="8dp"
                            android:textStyle="bold"
                            android:drawableTint="@color/colorBlack"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/myLocationBTN"
                            android:background="@null"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_my_location_black_24dp"
                            android:layout_alignParentEnd="true"
                            android:tint="@color/colorBlack"
                            android:layout_centerVertical="true"
                            android:id="@+id/myLocationBTN"
                            android:padding="5dp"/>

                    </RelativeLayout>

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingEnd="20dp"
                    tools:ignore="RtlSymmetry"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/please_select_your_gender"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/male"
                        android:id="@+id/checkMale"
                        android:textColor="@color/colorWhite"
                        android:paddingEnd="8dp"
                        android:textIsSelectable="true"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/female"
                        android:id="@+id/checkFemale"
                        android:textColor="@color/colorWhite"
                        android:paddingEnd="8dp"
                        android:textIsSelectable="true"/>

                </LinearLayout>

                <CheckBox
                    android:id="@+id/terms_conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="@string/terms_conditions"
                    android:textColor="@color/colorWhite"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    android:textSize="12sp"
                    android:textIsSelectable="true"/>

            </LinearLayout>

            <TextView
                android:id="@+id/continueBTN"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/continue_string"
                android:background="@drawable/loginbutton_selector"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:textAllCaps="true" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>