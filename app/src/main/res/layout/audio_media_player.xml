<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/postItemPlayArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/audioButtons">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/postItem_playVoiceIcon"
                app:civ_border_color="@color/colorRed"
                app:civ_border_width="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:visibility="visible"
                android:src="@drawable/ic_play_circle_outline_black_24dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/postItemSeekTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/audioButtons"
            android:padding="5dp"
            android:text="00:00" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/postItem_lav_playing"
            app:lottie_autoPlay="false"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/blue_playing_animation"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/postTotalTime"
            android:layout_toEndOf="@+id/postItemSeekTimer"
            android:visibility="visible" />

        <TextView
            android:id="@+id/postTotalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="00:00" />

    </RelativeLayout>

</RelativeLayout>