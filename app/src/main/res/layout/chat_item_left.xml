<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/chatProPic"
        android:src="@drawable/default_profile_display_pic"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="1dp"
        app:civ_border_overlay="true"
        android:layout_centerVertical="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:padding="5dp"
        android:layout_toEndOf="@+id/chatProPic"
        android:id="@+id/textArea">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/messageArea">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:backgroundTint="@color/white_greyish"
                android:id="@+id/voiceCard"
                app:cardElevation="1dp"
                android:visibility="visible"
                app:cardUseCompatPadding="true"
                tools:ignore="UnusedAttribute">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/mediaPlayer">

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_baseline_play_circle_outline_24"
                        android:tint="@color/colorPrimary"
                        android:id="@+id/playVoiceBTN"/>

                    <SeekBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/postTimeText"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/postTimeDuration"
                        android:id="@+id/voiceNoteSeekbar"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/postTimeText"
                        android:text="00:00"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/playVoiceBTN"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/postTimeDuration"
                        android:textColor="@color/colorBlack"
                        android:textSize="12sp"
                        android:text="00:00"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:background="@drawable/chat_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/showMessages"
                android:text="this is koetsa"
                android:maxWidth="240dp"
                android:visibility="gone"
                android:padding="8dp"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="4dp"
                android:textSize="16sp"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_gravity="start"
            android:textStyle="italic"
            android:id="@+id/chatTimeStamp"
            android:text="5 minutes ago"
            android:layout_below="@+id/messageArea"
            android:textColor="@color/colorBlack"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_done_black_24dp"
        android:layout_toEndOf="@+id/textArea"
        android:layout_centerVertical="true"
        android:id="@+id/greyTick"
        android:layout_marginStart="5dp"
        android:visibility="gone"/>

</RelativeLayout>