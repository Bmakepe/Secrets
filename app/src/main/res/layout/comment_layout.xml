<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white_greyish"
    tools:ignore="UnusedAttribute">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/default_profile_display_pic"
            android:id="@+id/comProPic"
            android:layout_margin="5dp"
            app:civ_border_color="@color/colorBlack"
            app:civ_border_width="1dp"
            app:civ_border_overlay="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/nameHeading"
                    android:padding="2dp"
                    tools:ignore="RtlSymmetry">

                    <TextView
                        android:id="@+id/commentOwner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/commentTime"
                        android:textColor="@color/colorBlack"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/commentTime"
                        android:layout_toStartOf="@+id/commentMenuIcon"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />

                    <ImageView
                        android:id="@+id/commentMenuIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_item_menu_icon" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/commentLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="2dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/commentCaption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="2dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    tools:ignore="RtlSymmetry" />

                <include
                    layout="@layout/audio_media_player"
                    android:visibility="gone"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:backgroundTint="@color/white"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="2dp"
                android:visibility="gone"
                app:cardUseCompatPadding="false"
                tools:ignore="UnusedAttribute">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_image_black_24dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/commentImage"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comButtons"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/likeComBTN"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/commentItemLikesCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorBlack"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/likeComBTN" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>