<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GettingStarted.InAppActivities.ContactsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contactsToolbar"
        android:background="@color/colorPrimaryDark"
        android:padding="5dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:tint="@color/colorWhite"
            android:layout_margin="8dp"
            android:layout_alignParentStart="true"
            android:id="@+id/cBack"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person_add_black_24dp"
            android:padding="5dp"
            android:layout_toStartOf="@+id/contactSearch"
            android:layout_centerVertical="true"
            android:tint="@color/colorWhite"
            android:id="@+id/createGroup"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contactSearch"
            android:src="@drawable/ic_search_black_24dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:gravity="end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_contact"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:id="@+id/selectTV"
            android:textStyle="bold"
            android:visibility="visible"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/cBack"
            android:layout_toStartOf="@+id/createGroup"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/contactsRecycler"
        android:scrollbars="vertical"
        android:layout_below="@+id/contactsToolbar"/>

</RelativeLayout>