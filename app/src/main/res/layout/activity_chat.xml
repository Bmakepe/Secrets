    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/bottomBar"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/messageArea"
            android:visibility="visible"
            android:layout_centerVertical="true">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/messageEt"
                android:hint="@string/message_hint"
                android:layout_marginEnd="3dp"
                android:textStyle="normal"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/voiceBTN"
                android:drawableStart="@drawable/smiley"
                android:drawablePadding="5dp"
                android:textColor="@color/colorBlack"
                android:layout_centerVertical="true"
                android:inputType="textCapSentences|textMultiLine"
                android:background="@color/colorWhite"
                tools:ignore="Autofill,UnusedAttribute"
                android:padding="8dp"/>

            <com.makepe.blackout.GettingStarted.RecordingClasses.FrameLayoutFixed
                android:id="@+id/record_panel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="#ffffff"
                android:visibility="gone"
                android:layout_toStartOf="@+id/voiceBTN" >

                <LinearLayout
                    android:id="@+id/slideText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_left"
                        android:tint="@color/colorPrimaryDark"/>

                    <TextView
                        android:id="@+id/slideToCancelTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="slide to the right to cancel"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_marginLeft="2dp"
                        android:textColor="#999999"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#ffffffff"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:src="@drawable/online_circle"
                        android:tint="@color/colorRed"
                        android:padding="13dp"/>

                    <TextView
                        android:id="@+id/recording_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="00:00"
                        android:textColor="#4d4c4b"
                        android:textSize="14sp"/>

                </LinearLayout>

            </com.makepe.blackout.GettingStarted.RecordingClasses.FrameLayoutFixed>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mic_black_24dp"
                android:tint="@color/colorWhite"
                android:id="@+id/voiceBTN"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="@null"/>

        </RelativeLayout>

