<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_view"
    tools:context=".GettingStarted.InAppActivities.ChatActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/chatbg"
        android:scaleType="centerInside"
        android:layout_below="@+id/chatToolbar"/>

    <RelativeLayout
        android:id="@+id/chatToolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:padding="5dp"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:id="@+id/chatBackBTN"
            android:tint="@color/white"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileCIV"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_toEndOf="@id/chatBackBTN"
            android:layout_centerVertical="true"
            android:src="@drawable/default_profile_display_pic"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="1dp"
            app:civ_border_overlay="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_toEndOf="@+id/profileCIV"
            android:layout_toStartOf="@+id/chatIcons"
            android:id="@+id/chatNameLayout">

            <TextView
                android:id="@+id/hisNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:singleLine="true"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/statusTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="12sp"
                android:singleLine="true"
                android:textStyle="bold|italic"
                android:visibility="gone" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chatIcons"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_video_call_black_24dp"
                android:layout_centerVertical="true"
                android:tint="@color/white"
                android:layout_margin="5dp"
                android:id="@+id/videoBTN"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_local_phone_black_24dp"
                android:layout_centerVertical="true"
                android:tint="@color/white"
                android:layout_margin="5dp"
                android:id="@+id/callBTN"
                android:layout_toEndOf="@+id/videoBTN"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_item_menu_icon"
                android:layout_centerVertical="true"
                android:tint="@color/white"
                android:layout_margin="5dp"
                android:id="@+id/chatMenu"
                android:layout_toEndOf="@+id/callBTN"/>

        </RelativeLayout>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomBar"
        android:layout_below="@+id/chatToolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="@string/encryption"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                android:textStyle="italic|bold"
                tools:ignore="SmallSp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chatRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:scrollbars="vertical" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

