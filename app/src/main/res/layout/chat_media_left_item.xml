<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_media_recycler"
        android:padding="5dp"
        android:id="@+id/chat_media_message_area">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chatProPic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/default_profile_display_pic"
            app:civ_border_color="@color/colorBlack"
            app:civ_border_overlay="true"
            app:civ_border_width="1dp" />

        <RelativeLayout
            android:id="@+id/textArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/chatProPic"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/messageArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/showMessages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chatUsername"
                    android:background="@drawable/chat_in"
                    android:maxWidth="240dp"
                    android:padding="8dp"
                    android:paddingStart="20dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/chatUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:visibility="invisible"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/chatTimeStamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/chatUsername"
                        android:layout_gravity="start"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="10sp"
                        android:textStyle="normal"
                        tools:ignore="SmallSp" />

                </RelativeLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/imageCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true"
                tools:ignore="UnusedAttribute">

                <ImageView
                    android:id="@+id/chatImage"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_done_black_24dp"
            android:layout_toEndOf="@+id/textArea"
            android:layout_centerVertical="true"
            android:id="@+id/greyTick"
            android:layout_marginStart="5dp"
            android:visibility="gone"
            app:tint="@color/colorPrimary" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_media_recycler"/>

</RelativeLayout>