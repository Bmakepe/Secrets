<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".GettingStarted.InAppActivities.MovementDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/movementDetailsToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@null"
        app:layout_collapseMode="pin"
        app:title="Movement Details" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:layout_below="@id/movementDetailsToolbar">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profileAppBAr"
            android:background="@null"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:background="@null"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
                android:id="@+id/profileCollapsingToolbar">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/personalArea">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/coverArea">

                        <ImageView
                            android:id="@+id/movementCoverImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/default_profile_display_pic" />

                        <ProgressBar
                            android:id="@+id/movementCoverPicLoader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:visibility="visible" />

                    </RelativeLayout>

                    <FrameLayout
                        android:id="@+id/flmiddle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/coverArea"
                        android:layout_marginTop="-50dp"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/topBar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/movementProfilePicture"
                                        android:layout_width="85dp"
                                        android:layout_height="85dp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/default_profile_display_pic"
                                        app:civ_border_color="@color/colorBlack"
                                        app:civ_border_overlay="true"
                                        app:civ_border_width="2dp" />

                                    <ProgressBar
                                        android:id="@+id/movementProPicLoader"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:visibility="visible" />

                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="5dp"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/movementDetailsName"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginEnd="5dp"
                                            android:background="@drawable/rounded_edittext"
                                            android:padding="5dp"
                                            android:singleLine="true"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="14sp"
                                            android:textStyle="bold" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/infoLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:background="@drawable/rounded_edittext"
                                        android:gravity="center_vertical">

                                        <LinearLayout
                                            android:id="@+id/followListBTN"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:backgroundTint="@color/colorPrimaryDark"
                                            android:baselineAligned="false"
                                            android:orientation="horizontal">

                                            <RelativeLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                tools:ignore="Suspicious0dp">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerHorizontal="true"
                                                    android:layout_weight="1"
                                                    android:orientation="vertical"
                                                    android:padding="5dp">

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:singleLine="true"
                                                        android:text="Posts"
                                                        android:textAlignment="center"
                                                        android:textAllCaps="false"
                                                        android:textColor="@color/colorBlack"
                                                        android:textSize="14sp"
                                                        android:textStyle="bold" />

                                                    <TextView
                                                        android:id="@+id/movementMediaCount"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:maxLines="1"
                                                        android:textAlignment="center"
                                                        android:textColor="@color/colorBlack"
                                                        android:textSize="14sp"
                                                        android:textStyle="bold"
                                                        tools:ignore="SmallSp" />

                                                </LinearLayout>

                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:id="@+id/movementFollowerListBTN"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                tools:ignore="Suspicious0dp">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerHorizontal="true"
                                                    android:layout_weight="1"
                                                    android:orientation="vertical"
                                                    android:padding="5dp">

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:singleLine="true"
                                                        android:text="Followers"
                                                        android:textAlignment="center"
                                                        android:textAllCaps="false"
                                                        android:textColor="@color/colorBlack"
                                                        android:textSize="14sp"
                                                        android:textStyle="bold" />

                                                    <TextView
                                                        android:id="@+id/movement_followers_count"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center_horizontal"
                                                        android:textAlignment="center"
                                                        android:textColor="@color/colorBlack"
                                                        android:textSize="14sp"
                                                        android:textStyle="bold" />

                                                </LinearLayout>

                                            </RelativeLayout>

                                        </LinearLayout>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp">

                                <TextView
                                    android:id="@+id/movementAboutTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_below="@+id/movementAboutTV"
                                    android:orientation="vertical" >

                                    <TextView
                                        android:id="@+id/movementPrivacy"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="sans-serif"
                                        android:singleLine="true"
                                        android:padding="2dp"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/movementTimeCreated"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="sans-serif"
                                        android:layout_marginTop="2dp"
                                        android:padding="2dp"
                                        android:singleLine="true"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/movementDescription"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="sans-serif"
                                        android:layout_marginTop="2dp"
                                        android:maxLines="3"
                                        android:padding="2dp"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="12sp"
                                        android:textStyle="bold"  />

                                </LinearLayout>

                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/movementButtonsArea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:baselineAligned="false"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/rounded_edittext"
                                    android:padding="5dp"
                                    tools:ignore="Suspicious0dp">

                                    <TextView
                                        android:id="@+id/followMovementBTN"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:drawablePadding="2dp"
                                        android:padding="5dp"
                                        android:text="Follow"
                                        android:textAlignment="center"
                                        android:textAllCaps="false"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@null" />

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/rounded_edittext"
                                    android:backgroundTint="@color/colorPrimary"
                                    android:padding="5dp"
                                    tools:ignore="Suspicious0dp">

                                    <TextView
                                        android:id="@+id/movementSendMessageBTN"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:padding="5dp"
                                        android:text="Message"
                                        android:textAlignment="center"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        app:drawableTint="@color/white" />

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </FrameLayout>

                </RelativeLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_edittext"
                    android:backgroundTint="@color/white"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/movementPostImage">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                app:boxStrokeColor="@color/colorPrimary"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:id="@+id/movementCaptionArea" >

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Whats Up???"
                                    android:textColorHint="#fff"
                                    android:textColor="#000"
                                    android:inputType="textMultiLine|textNoSuggestions"
                                    android:id="@+id/movementCaptionET"
                                    android:layout_gravity="center"
                                    android:drawableTint="@color/colorBlack"
                                    android:textSize="14sp"
                                    android:singleLine="true"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="20dp"
                                    android:background="@null"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <include layout="@layout/media_audio_layout" />

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_image_black_24dp"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/movementPostImage"
                            android:visibility="gone"
                            android:scaleType="centerCrop"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/imageButtons"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:id="@+id/movement_location_area"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tagLocation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="5dp"
                                android:text="Check In"
                                android:textColor="@color/colorBlack"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:drawableStartCompat="@drawable/ic_my_location_black_24dp"
                                app:drawableTint="@color/colorBlack" />

                            <TextView
                                android:id="@+id/movementLocationCheckIn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="No Location"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_toStartOf="@+id/movement_post_area"
                            android:layout_centerVertical="true"
                            android:id="@+id/imageButtons">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_image_black_24dp"
                                android:padding="10dp"
                                android:id="@+id/movementGoToGallery"
                                app:tint="@color/colorBlack" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/movement_post_area">

                            <TextView
                                android:id="@+id/movementPostFAB"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/rounded_edittext"
                                android:padding="10dp"
                                android:text="Record"
                                android:textAllCaps="true"
                                android:textColor="@color/colorBlack"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:drawableTint="@color/white"
                                tools:ignore="UseCompatTextViewDrawableXml" />

                            <ProgressBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/movementPostProgressBar"
                                android:layout_centerInParent="true"
                                android:visibility="gone"/>

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/movementsRecycler"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_amp_stories_24"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:tint="@color/white"
        android:visibility="gone"
        android:id="@+id/newMovementStoryBTN"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/movementScrollToTheTopBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movementDetailsToolbar"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/white_greyish"
        android:text="Back To Top"
        android:textColor="@color/colorBlack"
        android:visibility="gone"
        app:icon="@drawable/ic_baseline_arrow_circle_up_24"
        app:iconTint="@color/colorBlack" />

</RelativeLayout>